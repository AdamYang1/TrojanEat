<!--pages/allmenu/allmenu.wxml-->
<view class="headingContainer">
    <text class="heading">所有餐厅</text>
</view>
<view class="allMenuContainer">
    <view class="dhContainer">
        <view class="dhContainer">
            <button class="title" style="text-transform:uppercase; width: 400rpx; height: 100rpx;">EVK</button>
        </view>
        <view class="menuDecorator"></view>
        <scroll-view class="menuDisplayer" scroll-y="ture" upper-threshold="50" lower-threshold="50">
            <view wx:for="{{evkMenu}}" wx:key="*this" class="category">
                <view class="titleName">{{item.cate}}</view>
                <view wx:for="{{item.dishes}}" wx:for-item="dish" 
                wx:key="*this" class="dishes">
                    <view class="dish">{{dish}}</view>
                </view>
            </view>
        </scroll-view>
    </view>
    <view class="dhContainer">
        <view class="dhContainer">
            <button class="title" style="text-transform:uppercase; width: 400rpx; height: 100rpx;">PKS</button>
        </view>
        <view class="menuDecorator"></view>
        <scroll-view class="menuDisplayer" scroll-y="ture" upper-threshold="50" lower-threshold="50">
            <view wx:for="{{pksMenu}}" wx:key="*this" class="category">
                <view class="titleName">{{item.cate}}</view>
                <view wx:for="{{item.dishes}}" wx:for-item="dish" 
                wx:key="*this" class="dishes">
                    <view class="dish">{{dish}}</view>
                </view>
            </view>
        </scroll-view>
    </view>
    <view class="dhContainer">
        <view class="dhContainer">
            <button class="title" style="text-transform:uppercase; width: 400rpx; height: 100rpx;">VLG</button>
        </view>
        <view class="menuDecorator"></view>
        <scroll-view class="menuDisplayer" scroll-y="ture" upper-threshold="50" lower-threshold="50">
            <view wx:for="{{vlgMenu}}" wx:key="*this" class="category">
                <view class="titleName">{{item.cate}}</view>
                <view wx:for="{{item.dishes}}" wx:for-item="dish" 
                wx:key="*this" class="dishes">
                    <view class="dish">{{dish}}</view>
                </view>
            </view>
        </scroll-view>
    </view>
</view>