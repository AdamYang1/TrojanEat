<!--pages/allmenu/allmenu.wxml-->
<view class="headingContainer">
    <text class="heading">所有餐厅</text>
</view>
<view class="allMenuContainer">
    <view wx:for="{{dHalls}}" wx:for-item="dHall" class="dhContainer">
        <view class="dhContainer">
            <button class="title" style="text-transform:uppercase; width: 400rpx; height: 100rpx;">{{dHall}}</button>
        </view>
        <view class="menuDecorator"></view>
        <scroll-view class="menuDisplayer" scroll-y="ture" upper-threshold="50" lower-threshold="50">
            <view class="typeTitle">
                <view class="tDecorator"></view>
                <view class="typeDecorator">
                    <text style="margin-left:10rpx;">分区名称</text>
                </view>
            </view>
        </scroll-view>
    </view>

</view>