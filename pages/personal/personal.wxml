<!--pages/personal/personal.wxml-->
<!-- logo -->
<view class="logoContainer">
  <image class="logo" src="/pages/images/logo.png"></image>
  <view class="logoNameContainer">
    <view class="logoNameEng">
      <text class="logoName1">Trojan</text>
      <text class="logoName2">Eat</text>
    </view>
    <view class="logoNameChi">
      <text class="logoName3">南加大恰饭助手</text>
    </view>
  </view>
</view>

<!-- welcome -->
<view class="welcomeContainer">
  <view  wx:if="{{userInfo.avatarUrl}}" class="avatarContianer" bindtap="getUserInfo">
    <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
  </view>
  <view wx:else class="avatarContianer" bindtap="getUserInfo">
    <view class = "avatarContainer2">
      <text>登陆</text>
    </view>
  </view>
  <view wx:if="{{userInfo.avatarUrl}}" class="welcomeTextContainer">
    <text class="welcomeText1">Welcome, {{userInfo.nickName}}</text>
  </view>
  <view wx:else class="welcomeContainer2">
    <view class="welcomeTextContainer2">
     <text class="welcomeText2">请登录以查看个人数据</text>
    </view>
  </view>
</view>

<!-- 个人喜好 -->
<view wx:if="{{userInfo.avatarUrl}}" class="personalChoiceContainer" bindtap="toPersonalChoice">
  <text>个人喜好</text>
</view>
<!-- 收藏餐厅 -->
<view wx:if="{{userInfo.avatarUrl}}" class="flagDinningHallContainer">
  <text>收藏餐厅</text>
</view>
<!-- 联系我们 -->
<button class="contactContainer">
  <text>联系我们</text>
</button>

