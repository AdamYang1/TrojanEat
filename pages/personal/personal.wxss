button {
  /* background: #FBCA1F; */
  /* padding-top: 30rpx; */
  margin-top: 50rpx;
  font-family: inherit;
  padding: 0.6em 1.3em;
  font-weight: 900;
  font-size: 36rpx;
  color: #BA0000;
  border: 4px solid #FFC700;
  box-shadow: 0.2em 0.2em #be2929;
 }
 
 button:hover {
  transform: translate(-0.05em, -0.05em);
  box-shadow: 0.2em 0.2em #BA0000;
 }
 
 button:active {
  transform: translate(0.05em, 0.05em);
  box-shadow: 0.1m 0.1em #BA0000;
 }


button text {
  line-height: 140rpx;
  font-size: 55rpx;
  text-shadow: 0.1rem 0.1rem 0.1rem #FFC700;
  /* align-self: center; */
}