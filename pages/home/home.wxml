        <text class="dishName2">一道菜</text>
      </view>
    </view>
    <view class="dishContainer">
      <view class="dishTypeContainer">
        <text class="dishType">Protein</text>
      </view>
      <view class="dishNameContainer">
        <text class="dishName1">A DISH</text>
        <text class="dishName2">一道菜</text>
      </view>
    </view>
    <view class="dishContainer">
      <view class="dishTypeContainer">
        <text class="dishType">Protein</text>
      </view>
      <view class="dishNameContainer">
        <text class="dishName1">A DISH</text>
        <text class="dishName2">一道菜</text>
      </view>
    </view>
  </view>
</view>

<!-- menu区域 -->
<view wx:if="!{{isFirst}}" class="menuContainer">
  
</view>

<!-- 未登录时 -->
